{
  "manifest_version": 2,
  "name": "Shifter Detector",
  "description": "Is this site generated by Shifter?",
  "version": "1.3",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "Shifter_Mono_19.png",
      "38": "Shifter_Mono_38.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["detect_shifter.js"],
      "run_at": "document_end",
      "all_frames": false
  }],
  "permissions": [
    "tabs"
  ]
}
