{
  "manifest_version": 2,
  "name": "Shifter Detector",
  "description": "Is this site generated by Shifter?",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "Shifter_Mono.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["detect_shifter.js"],
      "run_at": "document_end",
      "all_frames": false
  }],
  "permissions": [
    "<all_urls>"
  ]
}
